<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".payment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/toolbar_logo"
                android:layout_width="135dp"
                android:layout_height="140dp"
                android:contentDescription="Logo"
                android:src="@drawable/nmims_beauty_salon_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="311dp"
                android:layout_height="98dp"
                android:fontFamily="sans-serif-black"
                android:gravity="right"
                android:text="Payment"
                android:textColor="@color/white"
                android:textSize="20pt"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.192"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/label_amount_to_be_paid"
            android:layout_width="367dp"
            android:layout_height="80dp"
            android:fontFamily="sans-serif-black"
            android:gravity="bottom"
            android:text="Your Amount To Be Paid"
            android:textAlignment="center"
            android:textColor="#D32F2F"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="165dp"
            android:layout_height="65dp"
            android:gravity="bottom"
            android:text="0.00"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/label_payment_method"
            android:layout_width="359dp"
            android:layout_height="61dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-black"
            android:gravity="bottom"
            android:text="Select Payment Method"
            android:textAlignment="center"
            android:textColor="#D32F2F"
            android:textSize="30dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_credit_card"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:fontFamily="sans-serif-black"
                android:text="Cash"
                android:textSize="25dp" />

            <RadioButton
                android:id="@+id/radio_debit_card"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:fontFamily="sans-serif-black"
                android:text="Online"
                android:textSize="25dp" />
        </RadioGroup>

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Confirm"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
