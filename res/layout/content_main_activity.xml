<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:paddingLeft="30dp"
                android:paddingRight="10dp"
                android:src="@drawable/drawer_menu" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/my_awesome_toolbar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/black"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/title_text"
                        android:layout_width="413dp"
                        android:layout_height="93dp"
                        android:text="NMIMS"
                        android:textAlignment="textStart"
                        android:textColor="#FFC107"
                        android:textSize="50dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.015" />

                    <TextView
                        android:id="@+id/subtitle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:text="Beauty Salon"
                        android:textAlignment="textStart"
                        android:textColor="#FFC107"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.875" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset"
        android:scrollbarSize="20dp"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:text="Hair Services"
                android:textColor="#FE0404"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_hair"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:contentDescription="Hair Services Image"
                android:scaleType="centerCrop"
                android:src="@drawable/hair" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="30dp"
                android:background="@color/black"
                android:paddingTop="20dp" />

            <TextView
                android:id="@+id/t2"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="35dp"
                android:paddingBottom="20dp"
                android:text="Face Services"
                android:textColor="#FE0404"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_face"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:contentDescription="Face Services Image"
                android:scaleType="centerCrop"
                android:src="@drawable/face" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="30dp"
                android:background="@color/black"
                android:paddingTop="20dp" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="35dp"
                android:paddingBottom="20dp"
                android:text="Waxing Services"
                android:textColor="#FE0404"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_waxing"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:contentDescription="Waxing Services Image"
                android:scaleType="centerCrop"
                android:src="@drawable/waxing" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="30dp"
                android:background="@color/black"
                android:paddingTop="20dp" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="35dp"
                android:paddingBottom="20dp"
                android:text="Makeup Services"
                android:textColor="#FE0404"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_makeup"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:contentDescription="Makeup Services Image"
                android:scaleType="centerCrop"
                android:src="@drawable/makeup" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#F6B774"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-bold"
            android:gravity="center"
            android:text="Made By - Apeksha Patil and Janhavi Deore"
            android:textColor="#616161"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
